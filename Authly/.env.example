# Authly Docker Environment Configuration
# Copy this to .env and customize as needed

# Application settings
AUTHLY_NAME=Authly
AUTHLY_DOMAIN=you-domain.com
AUTHLY_BASE_URL=https://auth.you-domain.com
AUTHLY_VERSION=1.0.0
AUTHLY_DEBUG_LOGGING=false
AUTHLY_ENABLE_METRICS=true

# User lockout settings (production values)
AUTHLY_USER_LOCKOUT_ENABLED=true
AUTHLY_USER_LOCKOUT_MAX_ATTEMPTS=3
AUTHLY_USER_LOCKOUT_DURATION=15
AUTHLY_USER_LOCKOUT_SLIDING_WINDOW=true
AUTHLY_USER_LOCKOUT_WINDOW=10

# IP rate limiting settings (production values)
AUTHLY_IP_RATE_LIMIT_ENABLED=true
AUTHLY_IP_RATE_LIMIT_MAX_ATTEMPTS=5
AUTHLY_IP_RATE_LIMIT_BAN_DURATION=30
AUTHLY_IP_RATE_LIMIT_SLIDING_WINDOW=false
AUTHLY_IP_RATE_LIMIT_WINDOW=15

# Ports
HTTP_PORT=8080
HTTPS_PORT=8443
METRICS_PORT=9090